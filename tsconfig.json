{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "typings/index.d.ts"
    ],
    "compileOnSave": false,
    "files": [
        "src/auth.ts",
        "src/auth/pubAuth.ts",
        "src/auth/subAuth.ts",
        "src/auth/userAuth.ts",
        "src/broker.ts",
        "src/config.ts",
        "src/event.ts",
        "src/event/connected.ts",
        "src/event/disconnected.ts",
        "src/event/handler.ts",
        "src/event/subscribed.ts",
        "src/event/unsubscribed.ts",
        "src/index.ts",
        "typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
